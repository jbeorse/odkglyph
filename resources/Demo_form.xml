<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>Demo Form A</h:title>
		<model>
		   
			
		     <instance>
				
				<student>
					<oneimg />
					<questionA />
					<questionB />
					<select />
					<select1 />
				</student>
			</instance>
			<!--namespace: jr:iimage-->
			<!-- The form works assuming that the images are in the correct sdcard path-->
			<iimage>
				<imageSet setName="Q1">
					<image id="img_1" caption="Photo 1">gallery_photo_1.jpg</image>
					<image id="img_2" caption="Photo 2">gallery_photo_2.jpg</image>	
					<image id="img_3" caption="Photo 3">gallery_photo_3.jpg</image>		
				</imageSet>
                <imageSet setName="Q2">
					<image id="img_4" caption="Photo 4">gallery_photo_4.jpg</image>		
					<image id="img_5" caption="Photo 5">gallery_photo_5.jpg</image>			
					<image id="img_6" caption="Photo 6">gallery_photo_6.jpg</image>					
                </imageSet>
				<imageSet setName="Q3">
					<image id="img_7">gallery_photo_4.jpg</image>													
                </imageSet>
			</iimage>
		</model>
	</h:head>

	<h:body>
		<input ref="oneimg">
			<label img="gallery_photo_4.jpg" caption="woo hoo">What do you of this picture?</label>
		</input>
		
		<input ref="questionA">
			<label img="jr:iimage('Q1')">Photo 1 and 2 were taken by the same person. Do you think Photo 3 was, too? Why?</label>
		</input>
		
		<select ref="select">
			<label>select multiple question</label>
			<hint>don't pick c and d together</hint>
			<item>
					<label img="gallery_photo_1.jpg" caption="opt a">option a</label>
					<value>a</value>
			</item>
			<item>
					<label img="gallery_photo_3.jpg">option b</label>
					<value>b</value>
			</item>
			<item>
					<label img="gallery_photo_5.jpg">option c</label>
					<value>c</value>
			</item>
			<item>
					<label img="jr:iimage('Q2')">option d</label>
					<value>d</value>
			</item>
		</select>
		<select1 ref="select1">
                        <label>select one question</label>
                        <hint>scroll down to see default selection</hint>
                        <item>
                                <label img="gallery_photo_4.jpg">option 1</label>
                                <value>1</value>
                        </item>
                        <item>
                                <label>option 2</label>
                                <value>2</value>
                        </item>
                        <item>
                                <label img="jr:iimage('Q3')">option 3</label>
                                <value>3</value>
                        </item>
                        <item>
                                <label>option 4</label>
                                <value>4</value>
                        </item>
                </select1>
	</h:body>
</h:html>
